<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wesleyrnash.nfcrwwithdrawing.app" >

    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.wesleyrnash.nfcrwwithdrawing.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.wesleyrnash.nfcrwwithdrawing.app.TriageActivity"
            android:label="@string/title_activity_triage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wesleyrnash.nfcrwwithdrawing.app.MainActivity" />
        </activity>

        <activity
            android:name="com.wesleyrnash.nfcrwwithdrawing.app.AdminActivity"
            android:label="@string/title_activity_admin" >
            <meta-data
              android:name="android.support.PARENT_ACTIVITY"
              android:value="com.wesleyrnash.nfcrwwithdrawing.app.MainActivity" />
        </activity>

        <activity
            android:name="com.wesleyrnash.nfcrwwithdrawing.app.BeamData"
            android:label="@string/title_beam_data" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wesleyrnash.nfcrwwithdrawing.app.MainActivity" />
        </activity>

        <activity
            android:name=".BeamData"
            android:label="@string/title_beam_data2" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wesleyrnash.nfcrwwithdrawing.app.MainActivity" />
        </activity>

        <activity
            android:name="com.wesleyrnash.nfcrwwithdrawing.app.TagDispatch"
            android:label="@string/title_tag_dispatch" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wesleyrnash.nfcrwwithdrawing.app.MainActivity" />
        </activity>


    </application>

</manifest>
