<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wesleyrnash.nfcrwwithdrawing.app.MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Triage Mode"
            android:textSize="50sp"
            android:id="@+id/button_triageMode"
            android:layout_marginTop="25dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Admin Mode"
            android:textSize="50sp"
            android:id="@+id/button_adminMode"
            android:layout_marginTop="25dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Beam Data"
            android:textSize="50sp"
            android:id="@+id/button_beam_data"
            android:layout_marginTop="25dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="LED Beam Data"
            android:textSize="50sp"
            android:id="@+id/button_led_beam_data"
            android:layout_marginTop="25dp" />

    </LinearLayout>

</ScrollView>

</FrameLayout>
